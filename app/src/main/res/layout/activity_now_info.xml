<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorFont"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/colorWhite"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/now_info_code"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/now_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/now_info_tmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@color/colorFont"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_wind_deg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_wind_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_wind_sc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_wind_spd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_hum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_pcpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_pres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_vis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/now_info_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorFont"
                android:textSize="25sp"
                android:gravity="center"/>

        </LinearLayout>




    </android.support.v7.widget.CardView>




</LinearLayout>
